<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="@color/progressBackground"
                android:centerY="0.75"
                android:endColor="@color/progressBackground"
                android:startColor="@color/progressBackground" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="90"
                    android:endColor="@color/progressBar"
                    android:startColor="@color/progressBar" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <!-- 定义ClipDrawable的剪裁方向为垂直 -->
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="90"
                    android:endColor="@color/progressBar"
                    android:startColor="@color/progressBar" />
            </shape>
        </clip>
    </item>

</layer-list>